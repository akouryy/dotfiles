indent_style = space
root = true
trim_trailing_whitespace = true

[{Makefile,.gitconfig}]
indent_size = 8
indent_style = tab

[*.rs]
indent_size = 4

[*.tsv{,.txt}]
indent_size = 8
indent_style = tab
trim_trailing_whitespace = false
