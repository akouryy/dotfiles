{
  "title": "0 Clear Clipboard by Fn+C",
  "rules": [
    {
      "description": "Clear Clipboard by Fn+C",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": ["fn"]
            }
          },
          "to_if_alone": [
            {
              "shell_command": "pbcopy && osascript -e \"display notification \\\"clipboard cleared: «$(pbpaste)»\\\" with title \\\"Karabiner\\\"\""
            }
          ]
        }
      ]
    }
  ]
}
